extends layouts/main-layout.pug

block content
    main
        .grid
            if prods.length > 0
                h1 My Products
                each product in prods
                    article.card.product__item
                        header.card__header
                            h2.product__title #{product.title}
                        .card__image
                            img(src="https://www.google.com/url?sa=i&source=images&cd=&cad=rja&uact=8&ved=2ahUKEwiZs6mbq8HeAhXBx4MKHRnnCJEQjRx6BAgBEAU&url=https%3A%2F%2Fthenounproject.com%2Fterm%2Fbook%2F2051%2F&psig=AOvVaw1aEwRC_q-m93OyEkp2kLDG&ust=1541647426972836" alt="No Image")
                        .card__content
                            h3.product__price $ #{product.price}
                            p.product__description #{product.desc}
                        .card__actions
                            button.btn Add to cart
            else
                h1 No Products